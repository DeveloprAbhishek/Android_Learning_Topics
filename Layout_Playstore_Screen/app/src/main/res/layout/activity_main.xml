<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/Actionbar"
        android:layout_width="match_parent"
        android:background="#079527"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/subHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Actionbar"
        android:background="#079527"
        android:gravity="center"
        android:padding="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_play_outline"
            android:contentDescription="@string/app_name" />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/subHeader"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <View
            android:id="@+id/squareBox"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#079527"/>
        <View
            android:id="@+id/rectangle1"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="#C4C4C4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/squareBox"/>

        <View
            android:id="@+id/rectangle2"
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:background="#C4C4C4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/rectangle1"
            android:layout_toRightOf="@id/squareBox"/>

        <View
            android:id="@+id/rectangle3"
            android:layout_width="45dp"
            android:layout_height="11dp"
            android:background="#C4C4C4"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rectangle2"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/squareBox"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_bookmarks"
            android:layout_alignParentRight="true"
            />


        <LinearLayout
            android:id="@+id/boxOfBtns"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/squareBox"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnTryNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#079527"
                android:backgroundTint="@color/white"
                android:text="Try Now"
                />

            <Button
                android:id="@+id/btnInstall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Install"
                android:backgroundTint="#079527"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>
        </LinearLayout>



        <View
            android:id="@+id/vCircle1"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ic_shape_circle"
            android:layout_below="@id/boxOfBtns"/>

        <View
            android:id="@+id/vCircle2"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/vCircle1"
            android:background="@drawable/ic_shape_circle"
            android:layout_below="@id/boxOfBtns"/>

        <View
            android:id="@+id/vCircle3"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/vCircle2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_shape_circle"
            android:layout_below="@id/boxOfBtns"/>

        <View
            android:id="@+id/vfooterRectangle1"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/vfooterRectangle2"
            android:background="#C4C4C4"
            />

        <View
            android:id="@+id/vfooterRectangle2"
            android:layout_width="278dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:background="#C4C4C4"
            />
    </RelativeLayout>


</RelativeLayout>