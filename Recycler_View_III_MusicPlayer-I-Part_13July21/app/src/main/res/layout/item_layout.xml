<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSongImage"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/joshua" />

        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song_Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/ivSongImage" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSongName"
            android:layout_toRightOf="@id/ivSongImage"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/ivSongPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/ivSongImage"
            android:layout_below="@id/seekBar"/>

        <ImageView
            android:id="@+id/ivSongPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/ivSongPlay"
            android:layout_below="@id/seekBar"/>

        <ImageView
            android:id="@+id/ivSongDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/ivSongPause"
            android:layout_below="@id/seekBar"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>

